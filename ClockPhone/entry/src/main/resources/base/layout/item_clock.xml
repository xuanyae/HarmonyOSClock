<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:item_text_date"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="center"
        ohos:left_margin="20vp"
        ohos:padding="4vp"
        ohos:text="Date"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:item_text_time"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:below="$id:item_text_date"
        ohos:layout_alignment="center"
        ohos:left_margin="20vp"
        ohos:padding="4vp"
        ohos:text="Time"
        ohos:text_size="20fp"/>

    <Component
        ohos:id="$+id:item_component_state"
        ohos:height="30vp"
        ohos:width="60vp"
        ohos:align_parent_right="true"
        ohos:background_element="$media:yes"
        ohos:right_margin="20vp"
        ohos:top_margin="20vp"/>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:list_divider"
        ohos:below="$id:item_text_time"/>
</DependentLayout>