<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:layout_top"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:padding="10vp">

        <Image
            ohos:id="$+id:image_cancel"
            ohos:height="25vp"
            ohos:width="25vp"
            ohos:foreground_element="$media:cancel"
            ohos:left_margin="20vp"
            ohos:vertical_center="true"/>

        <Text
            ohos:id="$+id:text_clockname"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="20vp"
            ohos:right_of="$id:image_cancel"
            ohos:text="删除闹钟"
            ohos:text_size="25fp"
            ohos:vertical_center="true"/>

    </DependentLayout>

    <ListContainer
        ohos:id="$+id:list_clock_view"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:layout_top"/>

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal"
        ohos:padding="10vp">

        <Button
            ohos:id="$+id:button_delete"
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:element_left="$media:delete"
            ohos:left_margin="50vp"
            ohos:text="删除"
            ohos:text_size="25fp"/>

        <Checkbox
            ohos:id="$+id:checkbox_selectall"
            ohos:height="30vp"
            ohos:width="100vp"
            ohos:check_element="$graphic:checkbox_deleteclock"
            ohos:left_margin="50vp"
            ohos:text="全选"
            ohos:text_size="25fp"/>
    </DirectionalLayout>
</DependentLayout>