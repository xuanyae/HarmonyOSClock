<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <!--相对布局-->
    <DependentLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:padding="10vp">
        <!--取消图片按钮-->
        <Image
            ohos:id="$+id:image_cancel"
            ohos:height="25vp"
            ohos:width="25vp"
            ohos:foreground_element="$media:cancel"
            ohos:left_margin="20vp"
            ohos:vertical_center="true"/>
        <!--居中标题-->
        <Text
            ohos:id="$+id:text_clockname"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="20vp"
            ohos:right_of="$id:image_cancel"
            ohos:text="新建闹钟"
            ohos:text_size="25fp"
            ohos:vertical_center="true"/>
        <!--确定图片按钮-->
        <Image
            ohos:id="$+id:image_ok"
            ohos:height="25vp"
            ohos:width="25vp"
            ohos:align_parent_right="true"
            ohos:foreground_element="$media:ok"
            ohos:right_margin="20vp"
            ohos:vertical_center="true"/>
    </DependentLayout>
    <!--日期选择器-->
    <DatePicker
        ohos:id="$+id:date_pick"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:operated_text_color="#FF9912"
        ohos:selected_normal_text_margin_ratio="5"
        ohos:selected_text_color="#007DFF"
        ohos:selected_text_size="20fp"
        ohos:top_padding="50vp"/>
    <!--时间选择器-->
    <TimePicker
        ohos:id="$+id:time_picker"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:operated_text_color="#FF9912"
        ohos:second="0"
        ohos:selected_normal_text_margin_ratio="5"
        ohos:selected_text_color="#007DFF"
        ohos:selected_text_size="20fp"
        ohos:top_padding="90vp"/>
</DirectionalLayout>